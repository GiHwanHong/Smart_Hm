<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_img">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="센서를 제어합니다"
        android:textColor="#FFF9C4"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Title1"
        style="@style/Custom_State_Tit_txtV"
        android:layout_above="@+id/relative_lay1"
        android:text="LED 제어" />

    <RelativeLayout
        android:id="@+id/relative_lay1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/Title2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/Sub_LED_Title1"
            style="@style/Custom_State_txtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/switch_L_r1"
            android:layout_marginStart="20dp"
            android:text="현관" />

        <ToggleButton
            android:id="@+id/switch_L_r1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Sub_LED_Title1"
            android:onClick="State_ToggleBtn_click" />

        <TextView
            android:id="@+id/Sub_LED_Title2"
            style="@style/Custom_State_txtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/switch_L_r1"
            android:layout_alignStart="@+id/switch_L_r2"
            android:layout_marginStart="15dp"
            android:text="거실" />

        <ToggleButton
            android:id="@+id/switch_L_r2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sub_LED_Title2"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/switch_L_r1"
            android:onClick="State_ToggleBtn_click" />

        <TextView
            android:id="@+id/Sub_LED_Title3"
            style="@style/Custom_State_txtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/switch_L_r3"
            android:layout_alignStart="@+id/switch_L_r3"
            android:layout_marginStart="20dp"
            android:text="부엌" />

        <ToggleButton
            android:id="@+id/switch_L_r3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/switch_L_r2"
            android:layout_alignBottom="@+id/switch_L_r2"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/switch_L_r2"
            android:onClick="State_ToggleBtn_click" />

        <TextView
            android:id="@+id/Sub_LED_Title4"
            style="@style/Custom_State_txtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/switch_L_r4"
            android:layout_alignStart="@+id/switch_L_r4"
            android:layout_marginStart="20dp"
            android:text="방" />

        <ToggleButton
            android:id="@+id/switch_L_r4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/switch_L_r3"
            android:layout_alignBottom="@+id/switch_L_r3"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/switch_L_r3"
            android:onClick="State_ToggleBtn_click" />

    </RelativeLayout>

    <TextView
        android:id="@+id/Title2"
        style="@style/Custom_State_Tit_txtV"
        android:layout_above="@+id/relative_lay2"
        android:text="온도 제어" />

    <RelativeLayout
        android:id="@+id/relative_lay2"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_above="@+id/Title3"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/Sub_TMP_Title1"
            style="@style/Custom_State_txtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Tmp_r1"
            android:layout_alignEnd="@+id/Tmp_r1"
            android:layout_marginEnd="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="거실 온도" />

        <TextView
            android:id="@+id/Tmp_r1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="5dp"
            android:text="거실의 온도입니다"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Sub_TMP_Title2"
            style="@style/Custom_State_txtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Tmp_r1"
            android:layout_alignStart="@+id/Tmp_r2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="19dp"
            android:text="방 온도" />

        <TextView
            android:id="@+id/Tmp_r2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Tmp_r1"
            android:layout_alignBottom="@+id/Tmp_r1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:text="방의 온도입니다"
            android:textColor="#000" />

    </RelativeLayout>


    <TextView
        android:id="@+id/Title3"
        style="@style/Custom_State_Tit_txtV"
        android:layout_above="@+id/relativeLayout"
        android:layout_marginBottom="14dp"
        android:text="가스 제어" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/Sub_GAS_Title1"
            style="@style/Custom_State_txtV"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/switch_G_r1"
            android:layout_alignStart="@+id/switch_G_r1"
            android:layout_marginStart="13dp"
            android:text="가스1" />

        <ToggleButton
            android:id="@+id/switch_G_r1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="135dp"
            android:layout_marginStart="49dp"
            android:onClick="State_ToggleBtn_click" />

        <TextView
            android:id="@+id/Sub_GAS_Title2"
            style="@style/Custom_State_txtV"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/switch_G_r2"
            android:layout_alignStart="@+id/switch_G_r2"
            android:layout_marginStart="12dp"
            android:text="가스2" />

        <ToggleButton
            android:id="@+id/switch_G_r2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/switch_G_r1"
            android:layout_alignBottom="@+id/switch_G_r1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="75dp"
            android:layout_marginLeft="135dp"
            android:onClick="State_ToggleBtn_click" />
    </RelativeLayout>
</RelativeLayout>