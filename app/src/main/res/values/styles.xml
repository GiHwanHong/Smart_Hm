<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 스플래시 스크린 액티비티용 테마 -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@drawable/splash_img</item>
    </style>

    <!-- Main창의 커스텀 버튼 -->
    <style name="Custom_Main_Btn">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#46adea</item>
        <item name="android:background">@drawable/ripple_efc_main_btn</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">58dp</item>
    </style>
    <!-- Main창의 커스텀 뷰 -->
    <style name="Custom_Main_View">

        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#FFFFFF</item>

    </style>
    <!-- Main창의 커스텀 입력 창 -->
    <style name="Custom_Main_Edit">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- 회원가입 창의 커스텀 텍스트 뷰 -->
    <style name="Custom_Join_txtV">
        <item name="android:background">@drawable/custom_join_txt</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 회원가입 창의 커스텀 버튼 -->
    <style name="Custom_Join_Btn">
        <item name="android:background">@drawable/ripple_efc_join_btn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#C8E6C9</item>
    </style>

    <!-- 회원가입 창의 커스텀 입력 창 -->
    <style name="Custom_Join_Edit">
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/sb__text_color</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 마이페이지 창의 커스텀 버튼 -->
    <style name="Custom_Mypage_Btn">
        <item name="android:background">@drawable/ripple_efc_join_btn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#C8E6C9</item>
    </style>

    <!-- 상태 창의 커스텀 텍스트 뷰 -->
    <style name="Custom_State_txtV">
        <item name="android:textColor">#FFF9C4</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 상태 창의 커스텀 타이틀 텍스트 뷰 -->
    <style name="Custom_State_Tit_txtV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@drawable/custom_join_txt</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF9C4</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>
</resources>
