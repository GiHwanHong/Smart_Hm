<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/rounded_edittext.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- shadow (밑으로, 위로) : 그림자 -->
            <item android:top="2dp">
                <shape android:padding="5dp" android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="#1f000000" />
                </shape>
            </item>
            <!-- background (위로) -->
            <item android:bottom="3dp">
                <shape android:padding="10dp" android:shape="rectangle">
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
                    <solid android:color="#33000000" />
                    <stroke android:width="4px" android:color="#FF4081" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

